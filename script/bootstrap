#!/usr/bin/env bash
# script/bootstrap
# Resolve all dependencies that the application requires to run

set -e

cd "$(dirname "$0")/.."

echo "==> Bootstrapping MSP430 Emulator dependencies..."

# Check if .NET 8.0 is installed
if ! command -v dotnet &> /dev/null; then
    echo "Error: .NET SDK is not installed. Please install .NET 8.0 SDK."
    echo "Visit: https://dotnet.microsoft.com/download"
    exit 1
fi

# Check .NET version
DOTNET_VERSION=$(dotnet --version)
echo "==> Found .NET version: $DOTNET_VERSION"

# Restore NuGet packages
echo "==> Restoring NuGet packages..."
dotnet restore

# Install Node.js dependencies for documentation tools
echo "==> Installing documentation tools..."
if command -v npm >/dev/null 2>&1; then
    # Install markdownlint-cli2 globally for documentation linting
    npm install -g markdownlint-cli2 || echo "Warning: Failed to install markdownlint-cli2. Documentation linting may not work."
else
    echo "Warning: npm not found. Install Node.js to enable documentation linting tools."
fi

echo "==> Bootstrap completed successfully!"
echo "==> All dependencies are now installed"